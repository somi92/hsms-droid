<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="5dip"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/stats_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:padding="3dip" >

        <TextView
            android:id="@+id/stats_num_box"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:text="1003"
            android:textSize="20dip"
            android:textColor="#09AD0B"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <TextView
        android:id="@+id/stats_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/stats_thumbnail"
        android:layout_toRightOf="@+id/stats_thumbnail"
        android:text="Pomoc za stanovnistvo pogodjeno poplavama u Republici Srbiji"
        android:textColor="#040404"
        android:textSize="15dip"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/stats_messages"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_description"
        android:layout_marginRight="50dip"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/stats_thumbnail"
        android:text="Poslato poruka: 1232"
        android:textColor="#10bcc9"
        android:textSize="14dip"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/stats_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/stats_messages"
        android:layout_marginRight="5dip"
        android:gravity="right"
        android:text="100 din"
        android:textColor="#FF5C33"
        android:textSize="12dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/stats_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_messages"
        android:layout_toRightOf="@+id/stats_thumbnail"
        android:gravity="left"
        android:text="Ukupan iznos: 10000 din"
        android:textColor="#10bcc9"
        android:textSize="14dip"
        android:textStyle="bold" />

</RelativeLayout>
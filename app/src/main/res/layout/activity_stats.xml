<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.github.somi92.hsmsdroid.activities.StatsActivity">

    <TextView
        android:id="@+id/stats_total_user_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ukupan broj vaših SMS donacija: 1224" />

    <TextView
        android:id="@+id/stats_total_user_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_total_user_messages"
        android:text="Ukupna količina novca koji ste donirali: 12000 din" />

    <TextView
        android:id="@+id/stats_list_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_total_user_amount"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:text="Humanitarne akcije koje ste donirali: " />

    <ListView
        android:id="@+id/statsListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_list_intro"
        android:divider="#b5b5b5"
        android:dividerHeight="1dp">

    </ListView>

</RelativeLayout>
